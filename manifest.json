{
  "manifest_version": 2,
  "version": "0.1",
  "name": "firefox-narrate-experiment",
  "applications": {
    "gecko": {
      "id": "firefox-narrate-experiment@mozilla"
    }
  },
  "description": "Template for Experimental Firefox WebExtensions using libdweb APIs.",
  "permissions": ["mozillaAddons", "storage"],
  "experiment_apis": {
    "narrate": {
      "schema": "./src/experiment/narrate.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["narrate"]],
        "script": "./src/experiment/narrate.js"
      }
    }
  },
  "background": {
    "scripts": ["./src/main.js"]
  },
  "content_scripts": [
    {
      "matches": ["about:reader*"],
      "js": ["./src/content-script.js"]
    }
  ]
}
